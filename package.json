{
  "name": "focha",
  "description": "Mocha wrapper that runs previously failed tests first",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/focha/issues",
  "bin": {
    "focha": "bin/focha.js"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    },
    "next-update": {
      "commands": {
        "dependency-check": "npm run deps",
        "deps-ok": "npm run deps",
        "git-issues": "npm run issues"
      }
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js",
    "bin"
  ],
  "homepage": "https://github.com/bahmutov/focha#readme",
  "keywords": [
    "ci",
    "mocha",
    "runner",
    "test",
    "testing"
  ],
  "license": "MIT",
  "main": "src/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/focha.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check . --no-dev",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix bin/*.js src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "demo-mocha": "mocha test/spec.js",
    "demo-focha": "node bin/focha.js test/spec.js",
    "ci": "node bin/focha.js test/spec.js && node bin/focha.js --all test/spec.js"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "license-checker": "13.1.0",
    "nsp": "2.8.1",
    "pre-git": "3.15.3",
    "semantic-release": "8.1.0",
    "snap-shot-it": "2.2.0",
    "standard": "10.0.3"
  },
  "dependencies": {
    "chalk": "2.1.0",
    "check-more-types": "2.24.0",
    "debug": "3.1.0",
    "got": "7.1.0",
    "lazy-ass": "1.6.0",
    "lodash": "4.17.4",
    "minimist": "1.2.0",
    "mocha": "3.5.3",
    "pluralize": "7.0.0",
    "ramda": "0.24.1",
    "ramda-fantasy": "0.8.0",
    "simple-bin-help": "1.7.0",
    "urlconcat": "0.0.12"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release"
  }
}
